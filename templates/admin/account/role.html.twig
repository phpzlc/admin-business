    <script>
        new Vue({
            el: '#main-content',
            data: function () {
                return {
                    ruleForm: {
                    },
                    data: [
                        {% for role in roles %}
                        {
                            key: "{{ role.id }}",
                            label: "{{ role.tag }}-{{ role.name }}",
                        },
                        {% endfor %}
                    ],
                    value: [
                        {% for role in adminRoles %}
                            "{{ role.role.id }}",
                        {% endfor %}
                    ]
                }
            },
            created() {
                // // 页面初始化使用
