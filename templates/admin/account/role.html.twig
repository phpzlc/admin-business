                submitForm(formName) {
                },
                resetForm() {
                    window.location.href ="{{ admin_url_anchor() }}";
                },
                transferSelChange(value, direction, movedKeys) {
                    const that = this;
                    if(direction == 'left') {
                        $.post("{{ path('admin_account_remove_role') }}?admin_user_auth_id={{ admin.userAuth.id }}", {
