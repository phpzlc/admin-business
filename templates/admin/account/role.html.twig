{% extends '@PHPZlcAdmin/page/index.html.twig' %}

{% block hend %}
<style type="text/css">
    .el-transfer-panel{
        width: 400px;
    }
    .el-transfer__button:first-child {
        margin-bottom: 10px;
        margin-right: 12px;
    }
</style>
{% endblock %}

{% block main_content %}
    <div class="add-page clearfix">
            <el-transfer
                    style="width: 100%"
                    v-model="value"
                    :data="data"
                    :titles="['未拥有角色', '已拥有角色']"
                    @change="transferSelChange"
            >
            </el-transfer>

        <el-divider></el-divider>
        <div>
            <el-button @click="resetForm()" size="mini">返回</el-button>
        </div>
    </div>
{% endblock %}

