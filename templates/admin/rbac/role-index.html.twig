{% extends '@PHPZlcAdmin/page/index.html.twig' %}

{% block main_content %}

    <div class="search-page clearfix" >
        <el-row class="list-btn-content mt-10">
            <el-button size="mini" type="primary" @click="handleCreate">新建</el-button>
        </el-row>

        <el-table :data="listData" style="width: 100%" border class="mt-10">
            <el-table-column prop="tag" label="角色标识" ></el-table-column>
            <el-table-column prop="name" label="角色名称" ></el-table-column>

            <el-table-column fixed="right" prop="date" label="操作" width="400">
                <template slot-scope="scope">
                    <el-button size="mini" @click="handleEdit(scope.$index, scope.row)">编辑</el-button>
                    <el-button size="mini" type="danger" @click="handleDel(scope.$index, scope.row)" v-if="!scope.row.isBuilt">删除</el-button>
                    <el-button size="mini" @click="handleRole(scope.$index, scope.row)">设置权限</el-button>
                </template>
            </el-table-column>

        </el-table>
    </div>
{% endblock %}

{% block main_content_vue %}
    <script>
        new Vue({
            el: '#main-content',
            // delimiters: ['${', '}$'],
            data: function () {
                return {
                    searchForm: {
                    },
                    listData: [
                        {% for role in roles %}
                        {
                            id: "{{ role.id }}",
                            name: "{{ role.name }}",
                            tag: "{{ role.tag }}",
                            isBuilt: "{{ role.isBuilt }}",
                        },
                        {% endfor %}
                    ]
                }
            },
            created() {
                // 页面初始化使用
                // console.log(1);
            },
            methods: {

                // 搜索按钮
                searchBtn() {
                    window.location.href = splicingGetParamsToUrl("{{ path('admin_rbac_role') }}", this.searchForm);
                },
                resetForm(formName) {
                    this.$refs[formName].resetFields();
                },
                handleRole(index, row) {
                    window.location = '{{ path('admin_rbac_role_permission') }}?role_id='+row.id+'';
                },
                handleEdit(index, row) {
                    window.location = '{{ path('admin_rbac_role_edit') }}?role_id='+row.id+'';
                },
                handleDel(index, row) {
                    this.$confirm('此操作将永久删除该角色, 是否继续?', '提示', {
                        confirmButtonText: '确定',
                        cancelButtonText: '取消',
                        type: 'warning'
                    }).then(() => {
                        const that = this;
                        $.post("{{ path('admin_rbac_role_del') }}", {"role_id": row.id}, function(data) {
                            resultPreprocess(that, data,'','')
                        }, )
                    }).catch(() => {
                        this.$message({
                            type: 'info',
                            message: '已取消删除'
                        });
                    });
                },
                handleCreate() {
                    window.location = "{{ path('admin_rbac_role_edit') }}";
                },
                handleCurrentChange(val) {
                    window.location.href = urlParamWrite(getSelfUrl(), 'page', val);
                },
                handleSizeChange(val) {
                    window.location.href = urlParamWrite(getSelfUrl(), 'rows', val);
                }
            }
        })
    </script>


{% endblock %}